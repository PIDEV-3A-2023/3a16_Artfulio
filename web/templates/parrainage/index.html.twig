{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parrainage index</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id Parrainage</th>
                    <th>Id User</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for parrainage in parrainages %}
                    <tr>
                        <td>{{ parrainage.idParrainage }}</td>
                        <td>{{ parrainage.getIdUser().getIdUser() }}</td> 
                        <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">   
                            </button>
                            </button>
                            <div class="dropdown-menu">
                              <a class="btn btn-secondary display-4 mx-auto" style="width: 200px;" href="{{ path('app_Parrainage_show', {'idParrainage': parrainage.idParrainage}) }}"
                                ><i class="bx bx-show-alt me-1"></i> Voir</a>
                              {{ include('parrainage/_delete_form.html.twig') }}
                            </div>
                          </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
