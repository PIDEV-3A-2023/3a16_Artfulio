{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Cin_user</th>
                <td>{{ user.cinUser }}</td>
            </tr>
            <tr>
                <th>Adresse_user</th>
                <td>{{ user.adresseUser }}</td>
            </tr>
            <tr>
                <th>Password_user</th>
                <td>{{ user.passwordUser }}</td>
            </tr>
            <tr>
                <th>Email_user</th>
                <td>{{ user.emailUser }}</td>
            </tr>
            <tr>
                <th>Is_pro</th>
