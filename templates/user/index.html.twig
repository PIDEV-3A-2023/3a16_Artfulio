{% extends 'admin/index.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Cin_user</th>
                <th>Adresse_user</th>
                <th>Password_user</th>
                <th>Email_user</th>
                <th>Is_pro</th>
                <th>Img_user</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.cinUser }}</td>
                <td>{{ user.adresseUser }}</td>
                <td>{{ user.passwordUser }}</td>
                <td>{{ user.emailUser }}</td>
                <td>{{ user.isPro ? 'Yes' : 'No' }}</td>
                <td>{{ user.imgUser }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
