<section class="light">
	<div class="container py-2">
		<div class="h1 text-center text-dark" id="pageHeaderTitle">Vos Collaborations</div>

{% for collaboration in collaborations %}

		<article class="postcard light red">
			<a class="postcard__img_link" href="#">
				<img class="postcard__img" src="https://picsum.photos/1000/1000" alt="Image Title" />
			</a>
			<div class="postcard__text t-dark">
				<h1 class="postcard__title blue"><a href="#">{{ collaboration.titre }}</a></h1>
				<div class="postcard__subtitle small">
					<time datetime="2020-05-25 12:00:00">
						<i class="fas fa-calendar-alt mr-2"></i>date fin: {{ collaboration.dateSortie ? collaboration.dateSortie|date('Y-m-d') : '' }}
					</time>
				</div>
				<div class="postcard__bar"></div>
				<div class="postcard__preview-txt">{{ collaboration.description }}</div>
				<ul class="postcard__tagbox">
					{#<li class="tag__item"><i class="fas fa-tag mr-2"></i>Podcast</li>
					<li class="tag__item"><i class="fas fa-clock mr-2"></i>55 mins.</li> #}
					<li class="tag__item play blue">
						<a href="{{ path('app_collaboration_show', {'idCollaboration': collaboration.idCollaboration}) }}"><i class="fas fa-play mr-2"></i>plus de detail</a>
					</li>
					<li class="tag__item play blue">
						<a href="{{ path('app_collaboration_edit', {'idCollaboration': collaboration.idCollaboration}) }}"><i class="fas fa-play mr-2"></i>modifier</a>
					</li>

				</ul>
			</div>
		</article>	

        {% else %}
            <tr>
                <td colspan="9">pas de collaborations actuellement</td>
            </tr>
        {% endfor %}	
	</div>
</section>


