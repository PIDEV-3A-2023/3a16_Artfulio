{% extends '/admin/index.html.twig' %}
{% block css %}
    <link rel="stylesheet" href="{{asset("assets/css/table-admin-event.css")}}">
{% endblock %}

{% block title %}Collaboration index{% endblock %}

{% block body %}
<style>
h1{
  font-size: 30px;
  color: #fff;
  text-transform: uppercase;
  font-weight: 300;
  text-align: center;
  margin-bottom: 15px;
}
table{
  width:100%;
  table-layout: fixed;
}
.tbl-header{
  background-color: rgba(255,255,255,0.3);
 }
.tbl-content{
  height:481px;
  overflow-x:auto;
  margin-top: 0px;
  border: 1px solid rgba(255,255,255,0.3);
}
th{
  padding: 20px 15px;
  text-align: left;
  font-weight: 500;
  font-size: 12px;
  color: #fff;
  text-transform: uppercase;
}
td{
  padding: 15px;
  text-align: left;
  vertical-align:middle;
  font-weight: 300;
  font-size: 12px;
  color: #fff;
  border-bottom: solid 1px rgba(255,255,255,0.1);
}


/* demo styles */

@import url(https://fonts.googleapis.com/css?family=Roboto:400,500,300,700);
body{

  
  background: linear-gradient(to right, #000000, #b8236e );
  font-family: 'Roboto', sans-serif;

}
section{
  margin: 0px;
}


/* follow me template */
.made-with-love {
  margin-top: 40px;
  padding: 10px;
  clear: left;
  text-align: center;
  font-size: 10px;
  font-family: arial;
  color: #fff;
}
.made-with-love i {
  font-style: normal;
  color: #F50057;
  font-size: 14px;
  position: relative;
  top: 2px;
}
.made-with-love a {
  color: #fff;
  text-decoration: none;
}
.made-with-love a:hover {
  text-decoration: underline;
}


/* for custom scrollbar for webkit browser*/

::-webkit-scrollbar {
    width: 6px;
} 
::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
} 
::-webkit-scrollbar-thumb {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3); 
}</style>
<div class="container-fluid">
    <div class="row"><h1>Collaborations nombre {{ collaborations|length }}</h1>
     </div>
    <div class="row"> 
      
{#***************************************************************************************************************#}
        <div class="col-2">
        </div>

        <div class="col-10" id="demo">
            <h1>Artfulio</h1>
           <!--  <h2>Table of my other Material Design works (list was updated 08.2015)</h2> -->
                <!-- Responsive table starts here -->
                 <!-- For correct display on small screens you must add 'data-title' to each 'td' in your table -->
        <div class="table-responsive-vertical shadow-z-1">
                <!-- Table starts here -->
        <table id="table" class="table table-hover table-mc-light-blue">
        <thead>
            <tr class="table-primary">
                <th>NomUser</th>
                <th>Titre</th>
                <th>TypeCollaboration</th>
                <th>Status</th>
               {#<th>Description</th>#} 
                <th>DateSortie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collaboration in collaborations %}
            <tr class="hoverable">
                        <td data-title="ID">{{ collaboration.nomUser }}</td>
                        <td data-title="Name">{{ collaboration.titre }}</td>
                        <td data-title="Name">{{ collaboration.typeCollaboration }}</td>
                        <td data-title="Name">{{ collaboration.status }}</td>
                        <td data-title="Name">{{ collaboration.dateSortie ? collaboration.dateSortie|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('adm_collaboration_show', {'idCollaboration': collaboration.idCollaboration}) }}"><i class="fa-solid fa-circle-info fa-2xl"></i></a>
                            <a href="{{ path('adm_collaboration_edit', {'idCollaboration': collaboration.idCollaboration}) }}"><i class="fa-solid fa-pen-to-square fa-2xl"></i></a>
                        </td>
            </tr>
        {% else %}
             <tr>
                <td colspan="9">pas de collaboration trouv√©</td>
            </tr>
        {% endfor %}
                    </tbody>
            </table>
                                        </div>

                    <div class="d-flex align-items-center justify-content-center">
                        {{ knp_pagination_render(collaborations) }}
                    </div>
            </div>
  </div>
</div>
{% endblock %}


{% block js %}
    <script src="https://kit.fontawesome.com/5617f4f4fc.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="{{asset("assets/css/table-admin-event.js")}}">
{% endblock %}
