{{ form_start(form,{
    'attr': {
        'novalidate': 'novalidate'}, 
    'style': 'width: 300px;',}) }}
    {{ form_widget(form) }}
    {% if app.user %}
        <button type="submit" class="btn btn-secondary display-4" style="width: 200px;">
            {% if is_granted('ROLE_USER') and not parrainageRepository.hasRequest(app.user) %}
                Envoyer parrainage
            {% else %}
                Vous avez déjà effectué une demande de parrainage.
            {% endif %}
        </button>
    {% else %}
        <p>Veuillez vous connecter pour effectuer une demande de parrainage.</p>
        <button type="submit" class="btn btn-secondary display-4 mx-auto" style="width: 200px;" disabled>

            Inscrivez-vous
        </button>
    {% endif %}
{{ form_end(form) }}
